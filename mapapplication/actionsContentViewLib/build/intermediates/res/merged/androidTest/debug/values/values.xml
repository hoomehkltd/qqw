<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="effects">

        <!-- None. -->
        <enum name="none" value="0"/>
        <!-- Scroll opening. -->
        <enum name="scroll_opening" value="1"/>
        <!-- Scroll closing. -->
        <enum name="scroll_closing" value="2"/>
        <!-- Scroll effects. -->
        <enum name="scroll" value="3"/>
        <!-- Fling opening. -->
        <enum name="fling_opening" value="4"/>
        <!-- Fling closing. -->
        <enum name="fling_closing" value="8"/>
        <!-- Fling effects. -->
        <enum name="fling" value="12"/>
        <!-- All (Opening and Closing). -->
        <enum name="all" value="15"/>
    </attr>
    <attr name="fade_type">

        <!-- Fade is disabled. -->
        <enum name="none" value="0"/>
        <!-- Fade applies to actions container. -->
        <enum name="actions" value="1"/>
        <!-- Fade applies to content container. -->
        <enum name="content" value="2"/>
        <!-- Fade applies to every container. -->
        <enum name="both" value="3"/>
    </attr>
    <attr name="spacing_type">

        <!-- Spacing will be calculated as offset from right bound of view. -->
        <enum name="right_offset" value="0"/>
        <!-- Spacing will be calculated as right bound of actions container. -->
        <enum name="actions_width" value="1"/>
    </attr>
    <attr name="swiping_type">

        <!-- Swiping will be handled at any point of screen. -->
        <enum name="full" value="0"/>
        <!-- Swiping will be handled starting from screen edge only. -->
        <enum name="edge" value="1"/>
    </attr>
    <declare-styleable name="ActionsContentView"><attr name="spacing_type"/><attr format="dimension" name="spacing"/><attr format="dimension" name="actions_spacing"/><attr format="reference" name="actions_layout"/><attr format="reference" name="content_layout"/><attr format="reference" name="shadow_drawable"/><attr format="dimension" name="shadow_width"/><attr name="fade_type"/><attr format="integer" name="fade_max_value"/><attr format="integer" name="fling_duration"/><attr name="swiping_type"/><attr format="dimension" name="swiping_edge_width"/><attr format="boolean" name="swiping_enabled"/><attr name="effects"/><attr format="reference" name="effect_actions"/><attr format="reference" name="effect_content"/><attr format="reference" name="effects_interpolator"/></declare-styleable>
    <dimen name="default_actionscontentview_actions_spacing">0dip</dimen>
    <dimen name="default_actionscontentview_spacing">64dip</dimen>
    <dimen name="default_actionscontentview_swiping_edge_width">24dip</dimen>
    <integer name="default_actionscontentview_fade_max_value">170</integer>
    <integer name="default_actionscontentview_fling_duration">900</integer>
</resources>