<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/shoppingcartmain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_shoppingcarttext"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="約看清單"
        android:layout_marginLeft="140dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="00dp"
        android:textSize="25sp"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topRelative">

        <ImageView
            android:id="@+id/imageline"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/loadbar"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_confirmapartmenttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. 確認房屋"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="100dp"
            android:textSize="15sp"
            android:textColor="#ff00cc66"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/text_bookedtimetext" />

        <TextView
            android:id="@+id/text_bookedtimetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. 預約時間"
            android:layout_marginLeft="150dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="100dp"
            android:textSize="15sp"
            android:textColor="#ff000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textconfirmedbooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. 提交成功"
            android:layout_marginLeft="280dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="100dp"
            android:textSize="15sp"
            android:textColor="#ff000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="468dp"
        android:id="@+id/list_shoppingcart"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/topRelative"
        android:layout_alignParentEnd="true" />


</RelativeLayout>